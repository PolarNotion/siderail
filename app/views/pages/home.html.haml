%section.pad-section
  .container
    %h2 Buttons
    - [ 'link', 'primary', 'secondary', 'default', 'danger', 'warning', 'info'].each do |x|

      %h3 #{x.titleize}
      = link_to 'Small', 'https://github.com/PolarNotion/siderail', class: "btn btn-#{x} btn-sm"
      = link_to 'Regular', 'https://github.com/PolarNotion/siderail', class: "btn btn-#{x}"
      = link_to 'Large', 'https://github.com/PolarNotion/siderail', class: "btn btn-#{x} btn-lg"
      = link_to 'Outline Large', 'https://github.com/PolarNotion/siderail', class: "btn btn-outline-#{x} btn-lg"
    
